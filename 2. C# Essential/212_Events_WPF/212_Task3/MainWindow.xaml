<Window x:Class="_212_Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_212_Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="START" HorizontalAlignment="Left" Margin="100,300,0,0" VerticalAlignment="Top" Width="150" Height="75"/>
        <Button Content="RESTART" HorizontalAlignment="Left" Margin="550,300,0,0" VerticalAlignment="Top" Width="150" Height="75"/>
        <TextBox x:Name="Timer" HorizontalAlignment="Left" Height="170" Margin="200,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="350" TextAlignment="Center" FontSize="48" TextDecorations="{x:Null}"/>
        <Button Content="STOP" HorizontalAlignment="Left" Margin="330,300,0,0" VerticalAlignment="Top" Width="150" Height="75"/>

    </Grid>
</Window>
