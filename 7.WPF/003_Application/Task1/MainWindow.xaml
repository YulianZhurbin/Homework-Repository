        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Name="eventShowerButton" Click="EventShowerButton_Click" Height="Auto" Width="Auto" Padding="5" Grid.Row="1" Margin="287,80,276,75" Background="LightYellow">
            Show events
        </Button>
        <TextBox Grid.Row="0" Background="PaleTurquoise" Margin="10" Name="textBoxName"/>
    </Grid>
</Window>
